<li class="list-group-item d-flex justify-content-between align-items-center">
  {{name}}
  {{#if devoured}}
  (eaten by {{Customer.name}})
  <span type="button" class="badge badge-danger badge-pill cleanup-btn" data-id="{{id}}">Clean up</span>
  {{else}}
  <div class="btn-group">
    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
      aria-expanded="false">
      Devour
    </button>
    <div class="dropdown-menu customer-options" data-burger-id="{{id}}">
    </div>
  </div>
  {{/if}}
</li>